@inherits LayoutComponentBase

<header class="app-header py-3 py-md-4">
    <div class="container d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-3">
            <span class="brand-badge rounded-pill px-3 py-1 small fw-semibold">Quark</span>
            <span class="brand-title h5 m-0 fw-semibold">DatePickers</span>
        </div>
        <a class="btn btn-light btn-sm" href="https://github.com/soenneker/Quark" target="_blank" rel="noreferrer noopener">GitHub</a>
    </div>
    <div class="container page-hero">
        <h1 class="display-6 fw-bold mb-2">Beautiful, accessible date inputs for modern apps</h1>
        <p class="lead mb-0 opacity-75">DateOnly and DateTime pickers with validation, thoughtfully styled and easy to use.</p>
    </div>
    <div class="container">
        <hr class="section-divider" />
    </div>
    
</header>

<main class="app-content py-4 py-md-5">
    <div class="container">
        @Body
    </div>
</main>
